<h2> Choose your skills </h2>

<%= form_tag(update_abilities_path, method: :post) do -%>
	<div class="form-group">
		<label for="good_at">I'm good at</label>
  		<%= text_area_tag :good_at, current_user.good_at, class: "form-control" %>
  	</div>
  	<div class="form-group">
  		<label for="looking_for">I'm looking for</label>
  		<%= text_area_tag :looking_for, current_user.looking_for, class: "form-control" %>
  <hr/>
  <%= render partial: 'user_abilities/ability_checkbox', collection: @abilities, as: :ability %>
  <div><%= submit_tag 'Save' %></div>
<% end %>


